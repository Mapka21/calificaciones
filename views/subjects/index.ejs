<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignaturas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .card-hover { transition: transform 0.2s; }
        .card-hover:hover { transform: translateY(-5px); }
    </style>
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Sistema Calificaciones</a>
            <a href="/subjects/new" class="btn btn-light">Nueva Asignatura</a>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% subjects.forEach(subject => { %>
            <div class="col">
                <div class="card h-100 card-hover shadow">
                    <div class="card-body">
                        <h5 class="card-title"><%= subject.name %></h5>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="/activities/<%= subject.id %>" class="btn btn-sm btn-primary">
                                Ver actividades <i class="bi bi-arrow-right"></i>
                            </a>
                            <div class="btn-group">
                                <a href="/subjects/<%= subject.id %>/edit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="/subjects/<%= subject.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>